{
  "importMap": "./import_map.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "deno.unstable"
    ]
  },
  "tasks": {
    "build": "deno run -A --unstable scripts/build.ts",
    "build:all": "deno task build:ua && deno task build:map && deno task build",
    "build:map": "deno run -A scripts/build-entrypoint.ts",
    "build:ua": "deno run -A scripts/get-agents.ts"
  },
  "fmt": {
    "options": {
      "singleQuote": true
    }
  }
}
